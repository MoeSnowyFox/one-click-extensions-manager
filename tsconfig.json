{
	"compilerOptions": {
		"target": "ESNext",
		"moduleDetection": "force",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"types": ["chrome"],
		"allowJs": true,
		"checkJs": false,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"declaration": false,
		"noEmit": false,
		"outDir": "distribution",
		"isolatedModules": true,
		"skipLibCheck": true
	},
	"include": ["source/**/*.ts", "source/**/*.svelte"],
	"exclude": ["**/*.test.ts"]
}
